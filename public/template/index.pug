
doctype html
head
  title Danh sách học viên
  
  link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.7.0/css/all.css' integrity='sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ' crossorigin='anonymous')

  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css' integrity='sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l' crossorigin='anonymous')

  link(rel="stylesheet" href="index.css")

body

  .loading-wrapper
    .spinner-border.text-primary.loading
    p.loading__text Vui lòng đợi trong giây lát

  .page-wrapper.container.flex-column.justify-content-center.align-items-center.mt-5.px-0 
    #index__modal.modal.fade
      .modal-dialog
        .modal-content

          .modal-body
            p.modal__text

          .modal-footer.d-flex.justify-content-center
            a.btn.btn-success.modal--success(data-dismiss='modal') Xác nhận
            a.btn.btn-secondary.modal--cancel.ml-4(data-dismiss='modal') Hủy bỏ

    h1.text-center 
      a(href="index.html") Danh sách học viên

    form.search-area(action="")
      input.form-control.search-input(type='text' placeholder='Tìm theo tên, năm sinh...')
        
      button.search-submit.btn.btn-outline-dark(type="submit") 
        i.fas.fa-search

    .buttons-wrapper.d-flex.justify-content-between.w-100 
      a.bg-danger.align-self-start.btn.btn--delete-selected.my-4.disabled(data-toggle="modal" data-target="#index__modal" data-backdrop="static" data-keyboard="false")
        span.text-light
          i.fas.fa-trash-alt.mr-2
        span.text-light.ml-2 Xóa các mục được chọn
      
      a.bg-success.align-self-start.btn.btn--add.my-4(href="create.html")
        span.text-light 
          i.fas.fa-plus-circle
        span.text-light.ml-2 Thêm học viên 

    ul.pagination
      li.page-item.btn.first-page
        a.page-link
          i.fas.fa-angle-double-left
      li.page-item.btn.prev-page
        a.page-link
          i.fas.fa-angle-left
      li.page-item.btn.active
        a.page-link 1      
      li.page-item.btn
        a.page-link 2
      li.page-item.btn
        a.page-link 3
      li.page-item.btn
        a.page-link 4
      li.page-item.btn
        a.page-link ...
      li.page-item.btn.next-page
        a.page-link 
          i.fas.fa-angle-right
      li.page-item.btn.last-page
        a.page-link
          i.fas.fa-angle-double-right

    table.table.table-striped.my-4
      thead.thead-dark
        tr.table-head
          th 
            input(type="checkbox")
          th Họ tên
          th Ngày sinh 
          th Giới tính
          th Email
          th Số điện thoại
          th Thao tác
          
      tbody
    
    ul.pagination
      li.page-item.btn.first-page
        a.page-link
          i.fas.fa-angle-double-left
      li.page-item.btn.prev-page
        a.page-link
          i.fas.fa-angle-left
      li.page-item.active
        a.page-link 1      
      li.page-item
        a.page-link 2
      li.page-item
        a.page-link 3
      li.page-item
        a.page-link 4
      li.page-item
        a.page-link ...
      li.page-item.next-page
        a.page-link 
          i.fas.fa-angle-right
      li.page-item.last-page
        a.page-link
          i.fas.fa-angle-double-right

    script(src='https://kit.fontawesome.com/d8c5e3f38e.js' crossorigin='anonymous')

    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js')

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns' crossorigin='anonymous')

    script(src="script.js")

    script(src="index.js")

      

    
            